/* pages/articleDetail/articleDetail.wxss */
.article-detail-container{
    display: flex;
    flex-direction: column;
    padding:10rpx;
    margin-top:20rpx;
}

.title-con >text{
    font-size: 48rpx;
}
.compont{
  margin-top:30rpx;
  display: flex;
  justify-content: center;
}
.article-author{
  margin-top:20rpx;
}
.article-author text{
    font-size:28rpx;
    color:#666;
}
.article-author text.corBlue{
    color:#576b95;
    margin-right:20rpx;
}
.article-context{
  margin-top:30rpx;
  text-indent: 2em;
}
.article-context text{
  font-size:16px;
  line-height: 32px;
}
.read-num{
  margin-top:30rpx;
  margin-bottom: 30rpx;
}
.read-num text{
  font-size:14px;
  margin-right:20rpx;
}

/* 轮播图的样式 */
.banner{
  width:750rpx;
  height:500rpx;
}
.banner image{
  width:100%;
  height: 100%;
}

/* 视频播放器的样式 */
.video{
  width:700rpx;
  height:500rpx;
}
.controls{
  width:700rpx;
  height: 500rpx;
  background-color: red;
  position: relative;
}
.controls-inner-box{
  position: absolute;
  width:100rpx;
  height:100rpx;
  left:50%;
  top:50%;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  background-color: rgba(0,0,0,0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.controls-inner-box cover-image{
  width: 30rpx;
  height: 30rpx;
  margin-top:20rpx;
}
.controls-inner-box cover-view{
  font-size: 24rpx;
  color:#fff;
}

/**音乐播放器的样式***/
.audio-container{
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: #fdfdfd;
  border:1px solid #f2f2f2;
  border-radius:4rpx;
}
.audio-controler{
  margin-right: 42rpx;
}
.audio-controler image{
  width: 80rpx;
  height: 80rpx;
}
.audio-title text{
  font-size: 36rpx;
}
.audio-from text{
  font-size: 28rpx;
  color:#666;
}
.audio-progress{
  position: relative;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  /* width:520rpx; */
}
.progress-circle{
  position: absolute;
  top:50%;
  margin-top:-10rpx;
  width:20rpx;
  height:20rpx;
  border-radius: 50%;
  background-color: #00b26a;
}
.audio-time{
  display: flex;
  justify-content: space-between;
}
.audio-time text{
  color:#666;
  font-size: 24rpx;
}