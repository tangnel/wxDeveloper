/* pages/type/type.wxss */
page{
  background-color: #eee;
}
.top-container{
  height: 608rpx;
}
.top-container image{
  width:100%;
  height:500rpx;
}
.artcicle-type{
  width:620rpx;
  height:140rpx;
  background-color: #fff;
  transform: translateY(-50%);
  margin-left:45rpx;
  padding:10rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-content: space-between
}
.artcicle-type text{
  font-size: 50rpx;
}
.float-right{
  align-self: flex-end;
}

/*文章列表*/
.article-list{
    width:690rpx;
    margin:30rpx;
    background-color: #fff;
    
  }
  .author{
    background-color: #fff;
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx 30rpx 30rpx;
  }
  .author-photo{
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
  }
  .markNum{
    color:#999;
    margin-left:20rpx;
    font-size: 24rpx;
  }
  .article-image{
    width:100%;
  }
  .article-option{
    padding:20rpx;
    background-color: #fff;
    margin: 0;
  }
  .article-btns{
    margin-top: 40rpx;
    display: flex;
    justify-content:space-between;
  }
  .release-date{
    font-size:24rpx;
    line-height: 50rpx;
  }

  /*文章列表样式*/
  .icon-box{
    display: flex;
  }
  .icon-box image{
    width:50rpx;
    height: 50rpx;
    margin-left:20rpx;
  }
  .shareBtn{
    width:50rpx;
    height: 50rpx;
    background-color: transparent;
    padding:0;
    position:relative;
    bottom:8rpx;
    margin-left:10rpx;
  }
  .shareBtn::after{
    border: none;
  }
  .shareBtn image{
    margin-left: 0;
  }